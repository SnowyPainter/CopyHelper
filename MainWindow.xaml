<Window x:Class="CopyHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyHelper"
        xmlns:utils="clr-namespace:CopyHelper.Utilities"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="CopyHelper" Height="700" Width="1250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="6" />
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <utils:NullToVisibilityConverter x:Key="NullToVisible" />
        <utils:NullToVisibilityConverter x:Key="NotNullToVisible" Invert="True" />

        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.08" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="SelectionBrush" Value="#4834D4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4834D4"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#4834D4"/>
                                <Setter Property="BorderThickness" TargetName="border" Value="1.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DCDDE1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4834D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Border Background="#F5F6F7" CornerRadius="15" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" x:Name="TitleBar" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" Margin="20,10,0,10">
                    <Ellipse Width="10" Height="10" Fill="#4834D4" Margin="0,0,10,0"/>
                    <TextBlock Text="CopyHelper" FontWeight="Bold" Foreground="#2D3436" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Content="-" Style="{StaticResource CaptionButtonStyle}" Click="MinimizeButton_Click"/>
                    <Button Content="â–¡" Style="{StaticResource CaptionButtonStyle}" Click="MaximizeButton_Click"/>
                    <Button Content="X" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="12,0,12,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Final Answer" FontSize="18" FontWeight="Bold" Foreground="#2D3436" Margin="0,0,0,12"/>

                        <TextBox Grid.Row="1"
                                 Text="{Binding AnswerText, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" />

                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Typing Settings" FontWeight="SemiBold" Foreground="#636E72" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Delay (ms)" FontSize="11" Foreground="#B2BEC3" Margin="2,0,0,4"/>
                                    <TextBox Text="{Binding TypingDelayMs, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Countdown (s)" FontSize="11" Foreground="#B2BEC3" Margin="2,0,0,4"/>
                                    <TextBox Text="{Binding CountdownSeconds, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Start Typing" Height="40" Margin="0,0,8,0"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding StartTypingCommand}" />
                                <Button Grid.Column="1" Content="Stop" Height="40"
                                        Command="{Binding StopTypingCommand}" />
                            </Grid>

                            <Border Margin="0,12,0,0" Padding="8" Background="#F8F9FA" CornerRadius="6">
                                <TextBlock Text="{Binding StatusText}" Foreground="#4834D4" FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Margin="6,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="8" Margin="6,6,6,12">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Paste (Ctrl+V)" Margin="0,0,8,0" Width="110" Command="{Binding PasteFromClipboardCommand}" />
                            <Button Content="Open File" Margin="0,0,8,0" Width="100" Command="{Binding OpenFileCommand}" />
                            <Button Content="Capture" Margin="0,0,8,0" Width="100" Command="{Binding CaptureCommand}" />
                            <Separator Margin="8,0"/>
                            <Button Content="Clear All" Foreground="#D63031" Width="100" Command="{Binding ClearCommand}" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="6,0,6,12" Background="#FAFAFA">
                        <Grid x:Name="DropArea" AllowDrop="True" PreviewDragOver="DropArea_PreviewDragOver" Drop="DropArea_Drop">
                            <Rectangle Stroke="#DCDDE1" StrokeThickness="2" StrokeDashArray="4 2" RadiusX="8" RadiusY="8"/>
                            <Image Source="{Binding SourceImage}" Stretch="Uniform" Margin="10"
                                   Visibility="{Binding SourceImage, Converter={StaticResource NotNullToVisible}}" />
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Visibility="{Binding SourceImage, Converter={StaticResource NullToVisible}}">
                                <TextBlock Text="+" FontSize="40" Foreground="#DCDDE1" HorizontalAlignment="Center"/>
                                <TextBlock Text="Drag and drop image or Paste" Foreground="#B2BEC3" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="10,0,10,8">
                        <TextBlock Text="Detected Photos" FontWeight="SemiBold" Foreground="#2D3436" Margin="0,0,0,8"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Photos}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" CornerRadius="8" Margin="0,0,10,10" Padding="4" Width="120" Height="90"
                                                BorderBrush="#EEE" BorderThickness="1">
                                            <Image Source="{Binding}" Stretch="UniformToFill" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <Border Grid.Row="3" Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="OCR Result" FontWeight="SemiBold" Foreground="#2D3436" Margin="0,0,0,8"/>
                            <TextBox Grid.Row="1" Text="{Binding OcrText}"
                                     BorderThickness="0" AcceptsReturn="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto" Background="Transparent"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
