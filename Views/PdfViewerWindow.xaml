<Window x:Class="CopyHelper.Views.PdfViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Viewer"
        Height="780"
        Width="1180"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#2D3436"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DCDDE1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource SmallButton}">
            <Setter Property="Background" Value="#4834D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Border Background="#F5F6F7" CornerRadius="14" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.2" Color="Black"/>
        </Border.Effect>

        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#4834D4" Margin="0,0,10,0"/>
                    <TextBlock Text="PDF Preview" FontWeight="Bold" Foreground="#2D3436" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="-" Style="{StaticResource CaptionButtonStyle}" Click="MinimizeButton_Click"/>
                    <Button Content="[]" Style="{StaticResource CaptionButtonStyle}" Click="MaximizeButton_Click"/>
                    <Button Content="X" Style="{StaticResource CloseButtonStyle}" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Grid HorizontalAlignment="Center">
                                <Image x:Name="PageImage" Stretch="None" />
                                <Canvas x:Name="HighlightCanvas" IsHitTestVisible="False"/>
                            </Grid>
                        </ScrollViewer>
                    </Border>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <Button Content="Prev" Style="{StaticResource SmallButton}" Click="Prev_Click" Margin="0,0,6,0"/>
                            <Button Content="Next" Style="{StaticResource SmallButton}" Click="Next_Click" Margin="0,0,12,0"/>
                            <TextBlock x:Name="ResultInfoText" Foreground="#636E72" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                            <TextBlock x:Name="PageInfoText" FontWeight="SemiBold" Foreground="#2D3436"/>
                            <TextBlock x:Name="TextSourceText" Foreground="#636E72" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="PageTextBox"
                                 Grid.Row="2"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"
                                 BorderBrush="#E0E0E0"
                                 Padding="8"
                                 Background="#FFFFFF"/>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="OCR" Style="{StaticResource SmallButton}" Click="Ocr_Click" Margin="0,0,8,0"/>
                            <Button Content="Insert to Answer" Style="{StaticResource PrimaryButton}" Click="Insert_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
